# Optional overrides for docling cleanup systemd unit
# Copy to ~/.config/docling-cleanup.env and adjust values.

# Wait for slow disks before running cleanup (seconds)
SLEEP_BEFORE_RUN=0

# Custom shared root (falls back to script default)
#DOC_SHARED_ROOT=/home/erni/erni-ki/data/docling/shared

# Force sudo helper (set false if passwordless sudo is unavailable)
DOC_SHARED_USE_SUDO=false

# Explicit owner/group to enforce on folders
#DOC_SHARED_OWNER=docling
#DOC_SHARED_GROUP=docling-data

# Retention overrides (days)
#DOC_SHARED_INPUT_RETENTION_DAYS=2
#DOC_SHARED_PROCESSED_RETENTION_DAYS=14
#DOC_SHARED_EXPORT_RETENTION_DAYS=30
#DOC_SHARED_QUARANTINE_RETENTION_DAYS=60
#DOC_SHARED_TMP_RETENTION_DAYS=1

# Soft size warning (GB)
#DOC_SHARED_MAX_SIZE_GB=20
