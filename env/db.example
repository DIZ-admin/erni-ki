# PostgreSQL Database Configuration
# Copy to env/db.env and configure per environment

POSTGRES_USER=erni_user
POSTGRES_DB=erni_ki
POSTGRES_INITDB_ARGS=-c log_statement=all -c shared_preload_libraries=pg_stat_statements,pgvector
PGDATA=/var/lib/postgresql/data/pgdata
# Secrets are injected via Docker secrets:
# POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
