# Snyk конфигурация для проекта erni-ki
# Исключения для сканирования безопасности

# Версия конфигурации
version: v1.25.0

# Отключаем Infrastructure as Code сканирование для избежания проблем с правами доступа
# IaC сканирование отключено из-за Docker контейнеров с ограниченными правами

# Исключения для сканирования (закомментированы, так как IaC отключено)
# exclude:
#   - "data"
#   - "data/**"
#   - "cache"
#   - "cache/**"

# Все исключения закомментированы, так как IaC сканирование отключено
# - data/postgres/**
# - data/redis/**
# - data/ollama/**
# - data/openwebui/**
# - data/grafana/**
# - data/loki/**
# - cache/backrest/restic/**
# - .git/**

# Все исключения закомментированы
# - logs/**
# - tmp/**
# - temp/**
# - backup/**
# - backups/**
# - .config-backup/**
# - env/**
# - secrets/**
# - node_modules/**
# - vendor/**
# - dist/**
# - build/**
# - out/**
# - lib/**

# Игнорируемые уязвимости (с обоснованием)
ignore:
  # Пример: игнорирование известной уязвимости в dev зависимости
  # SNYK-JS-EXAMPLE-123456:
  #   - '*':
  #       reason: "Используется только в development окружении"
  #       expires: '2025-12-31T23:59:59.999Z'

# Патчи (автоматические исправления)
patches: {}

# Языковые настройки
language-settings:
  javascript:
    # Исключаем dev зависимости из production сканирования
    includeDevDependencies: false

  docker:
    # Сканируем только production образы
    excludeBaseImageVulns: false
