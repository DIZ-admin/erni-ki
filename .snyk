# Snyk configuration for erni-ki project
# Security scan exclusions

# Configuration version
version: v1.25.0

# Disable Infrastructure as Code scanning to avoid permission issues
# IaC scanning disabled due to Docker containers with limited permissions

# Scan exclusions (commented out as IaC is disabled)
# exclude:
#   - "data"
#   - "data/**"
#   - "cache"
#   - "cache/**"

# All exclusions commented out as IaC scanning is disabled
# - data/postgres/**
# - data/redis/**
# - data/ollama/**
# - data/openwebui/**
# - data/grafana/**
# - data/loki/**
# - cache/backrest/restic/**
# - .git/**

# All exclusions commented out
# - logs/**
# - tmp/**
# - temp/**
# - backup/**
# - backups/**
# - .config-backup/**
# - env/**
# - secrets/**
# - node_modules/**
# - vendor/**
# - dist/**
# - build/**
# - out/**
# - lib/**

# Ignored vulnerabilities (with justification)
ignore:
  # Example: ignore known vulnerability in dev dependency
  # SNYK-JS-EXAMPLE-123456:
  #   - '*':
  #       reason: "Used only in development environment"
  #       expires: '2025-12-31T23:59:59.999Z'

# Patches (automatic fixes)
patches: {}

# Language settings
language-settings:
  javascript:
    # Exclude dev dependencies from production scanning
    includeDevDependencies: false

  docker:
    # Scan only production images
    excludeBaseImageVulns: false
