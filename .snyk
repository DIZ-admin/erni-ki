# Snyk configuration for erni-ki project
# Security scan exclusions

# Configuration version
version: v1.25.0

exclude:
  - "data/**"
  - "logs/**"
  - "cache/**"
  - "tmp/**"
  - ".config-backup/**"
  - "node_modules/**"
  - ".git/**"

# Ignored vulnerabilities (with justification)
ignore:
  # Example: ignore known vulnerability in dev dependency
  # SNYK-JS-EXAMPLE-123456:
  #   - '*':
  #       reason: "Used only in development environment"
  #       expires: '2025-12-31T23:59:59.999Z'

# Patches (automatic fixes)
patches: {}

# Language settings
language-settings:
  javascript:
    # Exclude dev dependencies from production scanning
    includeDevDependencies: false

  docker:
    # Scan only production images
    excludeBaseImageVulns: false
