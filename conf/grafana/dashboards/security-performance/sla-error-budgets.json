{
  "uid": "sla-error-budgets",
  "title": "SLA & Error Budgets",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "time": {"from": "now-7d", "to": "now"},
  "panels": [
    {
      "type": "stat",
      "title": "SLO Compliance (OpenWebUI)",
      "id": 1,
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "1 - sum(rate(nginx_http_requests_total{status=~\"5..\", upstream=\"openwebui\"}[7d])) / sum(rate(nginx_http_requests_total{upstream=\"openwebui\"}[7d]))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "type": "timeseries",
      "title": "Error Budget Burn",
      "id": 2,
      "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "(sum(rate(nginx_http_requests_total{status=~\"5..\"}[1h])) / sum(rate(nginx_http_requests_total[1h]))) / 0.005", "legendFormat": "Burn Rate", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Authentication Failures",
      "id": 3,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(rate(litellm_proxy_auth_failures_total[5m]))", "legendFormat": "Auth Failures", "refId": "A"}
      ]
    },
    {
      "type": "table",
      "title": "Recent Alerts",
      "id": 4,
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "ALERTS{alertstate=\"firing\"}", "format": "table", "refId": "A"}
      ],
      "options": {"showHeader": true}
    },
    {
      "type": "logs",
      "title": "Security Log Stream",
      "id": 5,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 12},
      "datasource": {"type": "loki", "uid": "loki"},
      "targets": [
        {"datasource": {"type": "loki", "uid": "loki"}, "expr": "{container_name=\"auth\"} |= \"WARN\"", "refId": "A"}
      ]
    }
  ]
}
