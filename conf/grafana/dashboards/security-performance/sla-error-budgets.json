{
  "uid": "sla-error-budgets",
  "title": "SLA & Error Budgets",
  "description": "SLO compliance, error budgets, burn rates, and security monitoring",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 3,
  "refresh": "1m",
  "tags": [
    "erni-ki",
    "sla",
    "slo",
    "sre",
    "security"
  ],
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "prometheus"
        },
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "options": [],
        "refresh": 1,
        "regex": ""
      },
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "query": "loki",
        "current": {
          "text": "Loki",
          "value": "loki"
        },
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "options": [],
        "refresh": 1,
        "regex": ""
      },
      {
        "name": "slo_target",
        "type": "custom",
        "query": "0.99,0.995,0.999",
        "current": {
          "text": "0.995",
          "value": "0.995"
        },
        "label": "SLO Target"
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "SLO Compliance Overview",
      "id": 100,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false
    },
    {
      "type": "gauge",
      "title": "Availability SLO (7d)",
      "id": 1,
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "(1 - (sum(rate(nginx_http_requests_total{status=~\"5..\"}[7d])) / clamp_min(sum(rate(nginx_http_requests_total[7d])), 0.001))) or vector(1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 3,
          "min": 0.99,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0.99
              },
              {
                "color": "yellow",
                "value": 0.995
              },
              {
                "color": "green",
                "value": 0.999
              }
            ]
          }
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      }
    },
    {
      "type": "stat",
      "title": "Error Budget Remaining",
      "id": 2,
      "gridPos": {
        "h": 3,
        "w": 4,
        "x": 6,
        "y": 1
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "clamp_min((1 - $slo_target) - (sum(rate(nginx_http_requests_total{status=~\"5..\"}[7d])) / clamp_min(sum(rate(nginx_http_requests_total[7d])), 0.001)), 0) / (1 - $slo_target) * 100 or vector(100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 25
              },
              {
                "color": "green",
                "value": 50
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "value"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      }
    },
    {
      "type": "stat",
      "title": "Total Requests (7d)",
      "id": 3,
      "gridPos": {
        "h": 3,
        "w": 4,
        "x": 10,
        "y": 1
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum(increase(nginx_http_requests_total[7d]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      }
    },
