{
  "uid": "sla-error-budgets",
  "title": "SLA & Error Budgets",
  "description": "SLO compliance monitoring, error budget tracking, and burn rate analysis for ERNI-KI platform",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 3,
  "refresh": "1m",
  "tags": ["erni-ki", "sla", "slo", "sre", "error-budget"],
  "time": {"from": "now-7d", "to": "now"},
  "templating": {
    "list": [
      {
        "name": "slo_target",
        "type": "custom",
        "query": "0.99,0.995,0.999",
        "current": {"text": "0.995", "value": "0.995"},
        "label": "SLO Target"
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "SLO Compliance Overview",
      "id": 100,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "collapsed": false
    },
    {
      "type": "gauge",
      "title": "Availability SLO (7d)",
      "description": "Current availability calculated over 7-day rolling window",
      "id": 1,
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 1},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "(1 - (sum(rate(nginx_http_requests_total{status=~\"5..\"}[7d])) / clamp_min(sum(rate(nginx_http_requests_total[7d])), 0.001))) or vector(1)", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 3,
          "min": 0.99, "max": 1,
          "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": 0.99}, {"color": "yellow", "value": 0.995}, {"color": "green", "value": 0.999}]}
        }
      }
    },
    {
      "type": "stat",
      "title": "Error Budget Remaining",
      "description": "Percentage of error budget remaining for current period",
      "id": 2,
      "gridPos": {"h": 3, "w": 4, "x": 6, "y": 1},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "clamp_min((1 - $slo_target) - (sum(rate(nginx_http_requests_total{status=~\"5..\"}[7d])) / clamp_min(sum(rate(nginx_http_requests_total[7d])), 0.001)), 0) / (1 - $slo_target) * 100 or vector(100)", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": 0}, {"color": "yellow", "value": 25}, {"color": "green", "value": 50}]}
        }
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value"}
    },
    {
      "type": "stat",
      "title": "Burn Rate (1h)",
      "description": "How fast error budget is being consumed. >1 = consuming faster than sustainable",
      "id": 3,
      "gridPos": {"h": 3, "w": 3, "x": 10, "y": 1},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "((sum(rate(nginx_http_requests_total{status=~\"5..\"}[1h])) / clamp_min(sum(rate(nginx_http_requests_total[1h])), 0.001)) / (1 - $slo_target)) or vector(0)", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 1}, {"color": "red", "value": 14.4}]}
        }
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value"}
    },
    {
      "type": "stat",
      "title": "Burn Rate (6h)",
      "description": "6-hour burn rate for trend analysis",
      "id": 4,
      "gridPos": {"h": 3, "w": 3, "x": 13, "y": 1},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "((sum(rate(nginx_http_requests_total{status=~\"5..\"}[6h])) / clamp_min(sum(rate(nginx_http_requests_total[6h])), 0.001)) / (1 - $slo_target)) or vector(0)", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 1}, {"color": "red", "value": 6}]}
        }
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value"}
    },
    {
      "type": "stat",
      "title": "Total Requests (7d)",
      "id": 5,
      "gridPos": {"h": 3, "w": 4, "x": 16, "y": 1},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(nginx_http_requests_total[7d]))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "short", "decimals": 0}},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "stat",
      "title": "Total Errors (7d)",
      "id": 6,
      "gridPos": {"h": 3, "w": 4, "x": 20, "y": 1},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(nginx_http_requests_total{status=~\"5..\"}[7d]))", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 100}, {"color": "red", "value": 1000}]}
        }
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value"}
    },
    {
      "type": "timeseries",
      "title": "SLO Compliance Over Time",
      "description": "Availability trend with SLO target reference line",
      "id": 10,
      "gridPos": {"h": 7, "w": 12, "x": 0, "y": 7},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "(1 - (sum(rate(nginx_http_requests_total{status=~\"5..\"}[1h])) / clamp_min(sum(rate(nginx_http_requests_total[1h])), 0.001))) or vector(1)", "legendFormat": "Availability", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "$slo_target", "legendFormat": "SLO Target", "refId": "B"}
      ],
      "fieldConfig": {
        "defaults": {"unit": "percentunit", "min": 0.95, "max": 1, "decimals": 4},
        "overrides": [
          {"matcher": {"id": "byName", "options": "SLO Target"}, "properties": [{"id": "custom.lineStyle", "value": {"fill": "dash", "dash": [10, 10]}}, {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]}
        ]
      },
      "options": {"legend": {"showLegend": true, "placement": "bottom"}}
    },
    {
      "type": "timeseries",
      "title": "Burn Rate (Multi-Window)",
      "description": "Burn rates across different time windows for alerting",
      "id": 11,
      "gridPos": {"h": 7, "w": 12, "x": 12, "y": 7},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "((sum(rate(nginx_http_requests_total{status=~\"5..\"}[1h])) / clamp_min(sum(rate(nginx_http_requests_total[1h])), 0.001)) / (1 - $slo_target)) or vector(0)", "legendFormat": "1h", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "((sum(rate(nginx_http_requests_total{status=~\"5..\"}[6h])) / clamp_min(sum(rate(nginx_http_requests_total[6h])), 0.001)) / (1 - $slo_target)) or vector(0)", "legendFormat": "6h", "refId": "B"},
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "((sum(rate(nginx_http_requests_total{status=~\"5..\"}[24h])) / clamp_min(sum(rate(nginx_http_requests_total[24h])), 0.001)) / (1 - $slo_target)) or vector(0)", "legendFormat": "24h", "refId": "C"}
      ],
      "fieldConfig": {"defaults": {"unit": "short"}},
      "options": {"legend": {"showLegend": true, "placement": "bottom"}}
    },
    {
      "type": "row",
      "title": "Security Monitoring",
      "id": 101,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 14},
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Auth Failures (1h)",
      "description": "401 Unauthorized responses in the last hour",
      "id": 20,
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 15},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(nginx_http_requests_total{status=\"401\"}[1h])) or vector(0)", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 50}, {"color": "red", "value": 200}]}
        }
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value"}
    },
    {
      "type": "stat",
      "title": "Forbidden (1h)",
      "description": "403 Forbidden responses in the last hour",
      "id": 21,
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 15},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(nginx_http_requests_total{status=\"403\"}[1h])) or vector(0)", "refId": "A"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 100}, {"color": "red", "value": 500}]}
        }
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value"}
    },
    {
      "type": "timeseries",
      "title": "HTTP Error Distribution",
      "description": "All HTTP error codes over time (4xx and 5xx)",
      "id": 22,
      "gridPos": {"h": 7, "w": 16, "x": 8, "y": 15},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum by (status) (rate(nginx_http_requests_total{status=~\"[45]..\"}[5m]))", "legendFormat": "{{status}}", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "reqps"}},
      "options": {"legend": {"showLegend": true, "placement": "right"}}
    },
    {
      "type": "row",
      "title": "Active Alerts",
      "id": 102,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 22},
      "collapsed": false
    },
    {
      "type": "table",
      "title": "Current Firing Alerts",
      "id": 30,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 23},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "ALERTS{alertstate=\"firing\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {"id": "organize", "options": {"excludeByName": {"Time": true, "__name__": true, "alertstate": true}, "renameByName": {"alertname": "Alert", "severity": "Severity", "instance": "Instance", "job": "Job", "Value": "Active"}}}
      ],
      "fieldConfig": {
        "defaults": {"custom": {"align": "left"}},
        "overrides": [
          {"matcher": {"id": "byName", "options": "Severity"}, "properties": [
            {"id": "custom.width", "value": 100},
            {"id": "mappings", "value": [
              {"type": "value", "options": {"critical": {"color": "red", "text": "CRITICAL"}}},
              {"type": "value", "options": {"warning": {"color": "yellow", "text": "WARNING"}}}
            ]}
          ]},
          {"matcher": {"id": "byName", "options": "Active"}, "properties": [{"id": "custom.hidden", "value": true}]}
        ]
      },
      "options": {"showHeader": true}
    },
    {
      "type": "row",
      "title": "Security Logs",
      "id": 103,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 31},
      "collapsed": false
    },
    {
      "type": "logs",
      "title": "Auth & Security Events",
      "description": "Security-related log entries from auth and nginx services",
      "id": 40,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 32},
      "datasource": {"type": "loki", "uid": "loki"},
      "targets": [
        {"datasource": {"type": "loki", "uid": "loki"}, "expr": "{container_name=~\".*(auth|nginx).*\"} |~ \"(?i)(unauthorized|forbidden|blocked|invalid|denied|failed|401|403)\" | __error__=\"\"", "refId": "A"}
      ],
      "options": {"showLabels": true, "showTime": true, "wrapLogMessage": true, "enableLogDetails": true, "sortOrder": "Descending"}
    }
  ],
  "links": [
    {"title": "SRE Overview", "url": "/d/platform-sre-overview", "type": "link", "icon": "dashboard"},
    {"title": "Monitoring Stack", "url": "/d/observability-control-plane", "type": "link", "icon": "dashboard"},
    {"title": "Alertmanager", "url": "/alerting/list", "type": "link", "icon": "bell"}
  ]
}
