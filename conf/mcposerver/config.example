{
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Europe/Berlin"]
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "        "postgresql://postgres:CHANGE_THIS_PASSWORD_BEFORE_PRODUCTION@db/openwebui"  # pragma: allowlist secret"
      ]
    },
    "context7": {
      "command": "uvx",
      "args": [
        "context7-mcp-server",
        "        "--api-key=CHANGE_THIS_CONTEXT7_API_KEY_BEFORE_PRODUCTION"  # pragma: allowlist secret"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/app/data",
        "/app/conf"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository=/app/data"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "web-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-web-search"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ]
    }
  }
}

