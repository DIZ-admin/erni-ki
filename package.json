{
  "name": "erni-ki",
  "version": "0.6.3",
  "type": "module",
  "description": "AI platform based on Open WebUI with full containerization",
  "keywords": [
    "ai",
    "llm",
    "open-webui",
    "ollama",
    "docker",
    "typescript",
    "go",
    "nginx",
    "postgresql",
    "redis"
  ],
  "homepage": "https://github.com/DIZ-admin/erni-ki#readme",
  "bugs": {
    "url": "https://github.com/DIZ-admin/erni-ki/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DIZ-admin/erni-ki.git"
  },
  "license": "MIT",
  "author": {
    "name": "ERNI-KI Team",
    "email": "team@erni-ki.local"
  },
  "contributors": [
    {
      "name": "DIZ-admin",
      "email": "admin@erni-ki.local",
      "url": "https://github.com/DIZ-admin"
    }
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "dev": "vitest",
    "test": "bun run test:unit && bun run test:e2e:mock",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:mock": "./scripts/run-playwright-mock.sh",
    "e2e:headed": "PW_BASE_URL=https://localhost playwright test --headed --project=chromium",
    "e2e:report": "playwright show-report",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "bun run lint:js && bun run lint:py",
    "lint:js": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:js:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "lint:py": "bash -c 'if [ -f .venv/bin/activate ]; then source .venv/bin/activate && python3 -m ruff check .; else python3 -m ruff check . || echo \"Warning: Ruff not found. Install with: pip install ruff\"; fi'",
    "lint:py:fix": "bash -c 'if [ -f .venv/bin/activate ]; then source .venv/bin/activate && python3 -m ruff check . --fix; else python3 -m ruff check . --fix || echo \"Warning: Ruff not found. Install with: pip install ruff\"; fi'",
    "lint:fix": "bun run lint:js:fix && bun run lint:py:fix",
    "format": "./scripts/prettier-run.sh write",
    "format:check": "./scripts/prettier-run.sh check",
    "format:py": "bash -c 'if [ -f .venv/bin/activate ]; then source .venv/bin/activate && python3 -m ruff format .; else python3 -m ruff format . || echo \"Warning: Ruff not found. Install with: pip install ruff\"; fi'",
    "type-check": "tsc --noEmit --incremental --tsBuildInfoFile .tsbuildinfo",
    "lint:language": "bun run scripts/language-check.cjs",
    "lint:language:all": "bun run scripts/language-check.cjs --all",
    "build": "tsc",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "docker:build": "docker build -t erni-ki-auth:dev ./auth",
    "docker:run": "docker compose up -d",
    "docker:stop": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "security:scan": "bun audit --audit-level=high && docker run --rm -v $(pwd)/auth:/src -w /src securecodewarrior/docker-gosec ./...",
    "docs:lint": "python3 scripts/docs/content_lint.py --fix-headings --add-toc",
    "docs:translations": "python3 scripts/docs/translation_report.py",
    "docs:report": "python3 scripts/docs/content_lint.py",
    "prepare": "husky install",
    "commit:fast": "SKIP=visuals-and-links-check,typescript-type-check,docker-compose-check git commit",
    "commit:full": "git commit",
    "commit": "git-cz",
    "release": "semantic-release",
    "precommit": "lint-staged",
    "postinstall": "bun run prepare",
    "pre-commit:install": "source .venv/bin/activate && pre-commit install && pre-commit install --hook-type commit-msg",
    "pre-commit:run": "source .venv/bin/activate && pre-commit run --all-files",
    "pre-commit:fast": "source .venv/bin/activate && pre-commit run --config .pre-commit/config-fast.yaml --all-files",
    "pre-commit:full": "source .venv/bin/activate && pre-commit run --config .pre-commit-config.yaml --all-files",
    "pre-commit:update": "source .venv/bin/activate && pre-commit autoupdate"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.54.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.15.0",
    "eslint-plugin-n": "^17.13.2",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "semantic-release": "^21.1.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.py": [
      "ruff check --fix",
      "ruff format"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write --log-level=warn",
      "bun run lint:language -- --all"
    ],
    "*.toml": [
      "bun run lint:language -- --all"
    ],
    "*.go": [
      "gofmt -w",
      "bash -lc 'PATH=\"$PATH:$HOME/go/bin:/Users/kostas/go/bin\" goimports -w \"$@\"' --"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "overrides": {
    "js-yaml": "4.1.1",
    "tmp": "0.2.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.5"
  },
  "packageManager": "bun@1.3.3"
}
